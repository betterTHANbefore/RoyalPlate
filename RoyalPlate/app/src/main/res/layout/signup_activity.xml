<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:background="@drawable/draw_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- Image holder   -->
    <LinearLayout
        android:layout_weight="9"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/royalplate_title"
            android:src="@drawable/royalplate_welcome"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/h_hostessbtn"
                android:textColor="@color/darkOrange"
                android:text="H"
                android:textStyle="bold"
                android:textSize="20dp"
                android:background="@drawable/simpleborader"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <!--<Button-->
                <!--android:id="@+id/w_waitersbtn"-->
                <!--android:layout_below="@+id/h_hostessbtn"-->
                <!--android:textColor="@color/darkOrange"-->
                <!--android:text="W"-->
                <!--android:textStyle="bold"-->
                <!--android:textSize="20dp"-->
                <!--android:background="@drawable/simpleborader"-->
                <!--android:layout_width="40dp"-->
                <!--android:layout_height="wrap_content" />-->
            <Button
                android:id="@+id/c_chefbtn"
                android:textColor="@color/darkOrange"

                android:text="C"
                android:textStyle="bold"
                android:textSize="20dp"
                android:background="@drawable/simpleborader"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/h_hostessbtn" />
            <Button
                android:id="@+id/m_managerbtn"
                android:textColor="@color/darkOrange"
                android:text="M"
                android:textStyle="bold"
                android:textSize="20dp"
                android:background="@drawable/simpleborader"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/c_chefbtn" />

        </RelativeLayout>

        <LinearLayout
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:text="Waiter Singup form"
                android:layout_margin="10dp"
                android:textColor="@color/orange"
                android:textStyle="bold|italic"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/userName"

                android:hint="Username"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/passWord"

                android:hint="Password"

                android:layout_margin="10dp"
                android:imeActionId="@+id/login"
                android:imeActionLabel="Sign In"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <EditText
                android:id="@+id/passwordAgain"
                android:hint="Re-enter your Password"
                android:imeActionId="@+id/login"
                android:imeActionLabel="Sign In"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



            <Button
                android:id="@+id/action_button"
                android:text="@string/sign_up"
                android:background="@drawable/rounded_corner"
                android:textSize="20sp"
                android:textColor="@color/antiquewhite"
                android:layout_margin="10dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        </LinearLayout>

    </LinearLayout>

</LinearLayout>