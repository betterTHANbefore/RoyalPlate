<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:gravity="center"

    android:background="@drawable/draw_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">







    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/h_hostessbtn"
            android:textColor="@color/orange"
            android:text="H"
            android:textStyle="bold"
            android:textSize="20dp"
            android:background="@drawable/simplebackground"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Button
            android:id="@+id/w_waitersbtn"
            android:layout_below="@+id/h_hostessbtn"
            android:textColor="@color/orange"
            android:text="W"
            android:textStyle="bold"
            android:textSize="20dp"
            android:background="@drawable/simplebackground"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/c_chefbtn"
            android:textColor="@color/orange"
            android:text="C"
            android:textStyle="bold"
            android:textSize="20dp"
            android:background="@drawable/simplebackground"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/w_waitersbtn"
            />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="80dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Waiter Singup form"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:textColor="@color/orange"
            android:textStyle="bold|italic"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/userName"

            android:hint="Username"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/passWord"

            android:hint="Password"

            android:layout_margin="10dp"
            android:imeActionId="@+id/login"
            android:imeActionLabel="Sign In"
            android:imeOptions="actionUnspecified"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <EditText
            android:id="@+id/passwordAgain"
            android:hint="Re-enter your Password"
            android:imeActionId="@+id/login"
            android:imeActionLabel="Sign In"
            android:imeOptions="actionUnspecified"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="right"
android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/action_button"
            android:text="@string/sign_up"
            android:background="@drawable/rounded_corner"
            android:textSize="20sp"
            android:textColor="@color/antiquewhite"
            android:layout_margin="10dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
           android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_weight="2"

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/LoginButton"
            android:textColor="@color/antiquewhite"
            android:background="@drawable/rounded_corner"
            android:text="@string/log_in"
            android:textSize="20sp"
            android:layout_margin="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>