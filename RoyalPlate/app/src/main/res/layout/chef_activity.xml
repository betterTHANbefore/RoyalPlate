    <!-- Big Paten - list of items and ordered item panels - 3 panels-->
    <LinearLayout
        android:background="@drawable/draw_background"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/orderedlistlayout"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

                <TextView
                    android:id="@+id/chef_tablenoid"
                    android:hint="Table No"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:textColor="@color/antiquewhite"
                    android:layout_gravity="left"

                    android:gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toLeftOf="@+id/doneButton"
                    android:layout_toStartOf="@+id/doneButton" />


            <ListView

                android:id="@+id/itemlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/chef_tablenoid"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_above="@+id/doneButton" />

            <Button
                android:id="@+id/doneButton"
                android:background="@drawable/rounded_corner"
                android:text="DONE"
                android:textSize="20dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:textColor="@color/antiquewhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_weight="2"
            android:layout_margin="20dp"
            android:background="@drawable/draw_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fragmentContainer_chef">

        </RelativeLayout>


    </LinearLayout>



</LinearLayout>