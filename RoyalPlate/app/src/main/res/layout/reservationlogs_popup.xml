<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background_popup"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<!-- title -->
    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/titleview"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/reservationlogtitleid"
            android:padding="20dp"
            android:textSize="25dp"
            android:text="Reservation Logs"
            android:textColor="@color/darkOrange"
            android:textStyle="bold|italic"
            android:background="@color/marron"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

   <!-- big panel -->
    <RelativeLayout
        android:id="@+id/listviewlayout"
        android:layout_below="@+id/titleview"
        android:layout_weight="1"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ListView

            android:id="@+id/reservationlistviewid"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >

        </ListView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_below="@+id/listviewlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout">

        <Button

            android:id="@+id/okBtn_reservationpopup"
            android:text="OK"
            android:textSize="20dp"
            android:textColor="@color/antiquewhite"
            android:background="@drawable/rounded_corner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true" />



    </RelativeLayout>

</RelativeLayout>