<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background_popup"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<!-- title -->
    <LinearLayout
        android:layout_weight="3"
        android:id="@+id/titleview"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/welcometitle"
        android:padding="20dp"
        android:textSize="25dp"
        android:text="Assigned Guest"
        android:textColor="@color/darkOrange"
        android:textStyle="bold|italic"
        android:background="@color/marron"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>

   <!-- big panel -->
    <LinearLayout
        android:id="@+id/displaylayout"
        android:layout_below="@+id/titleview"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Right side -->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        </LinearLayout>

        <!-- center -->
        <RelativeLayout
            android:layout_weight="3"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/guestname_popup"
                android:textColor="@color/orange"
                android:layout_marginTop="15dp"
                android:textSize="25dp"
                android:textStyle="bold"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/noofpeople_popup"
                android:layout_below="@+id/guestname_popup"
                android:textColor="@color/orange"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



            <TextView
                android:id="@+id/tableno_popup"
                android:layout_below="@+id/noofpeople_popup"
                android:textColor="@color/orange"
                android:layout_marginTop="15dp"
                android:textSize="25dp"
                android:layout_marginLeft="5dp"

                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


            <TextView
                android:id="@+id/waitername_popup"
                android:layout_below="@+id/tableno_popup"
                android:textColor="@color/orange"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/waitername_popup"
                android:layout_centerHorizontal="true">
                <Button
                    android:text="Confirm"
                    android:id="@+id/confirmBtn_popup"
                    android:textSize="20dp"
                    android:textColor="@color/antiquewhite"
                    android:background="@drawable/rounded_corner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/cancleBtn_popup"
                     />
                <Button

                    android:id="@+id/cancleBtn_popup"
                    android:text="Cancle"
                    android:textSize="20dp"
                    android:textColor="@color/antiquewhite"
                    android:background="@drawable/rounded_corner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_alignParentBottom="true"
                   />

            </RelativeLayout>


        </RelativeLayout>

        <!-- left side -->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        </LinearLayout>



    </LinearLayout>


</RelativeLayout>