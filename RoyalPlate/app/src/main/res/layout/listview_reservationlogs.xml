<?xml version="1.0" encoding="utf-8"?>

<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:shrinkColumns="*"
    android:stretchColumns="*">
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <TextView
            android:hint="Time"
            android:id="@+id/guest_timeid"
            android:layout_toRightOf="@id/guest_dateid"
            android:layout_centerHorizontal="true"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textColor="@color/marron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:hint="waiter"
            android:id="@+id/guest_waiterid"
            android:layout_centerHorizontal="true"

            android:textSize="15dp"
            android:textStyle="bold"

            android:layout_toRightOf="@id/guest_timeid"
            android:layout_margin="5dp"
            android:textColor="@color/marron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
     >

        </TextView>
        <TextView
            android:id="@+id/guest_tablenoid"
android:hint="TableNo"
            android:layout_centerHorizontal="true"

            android:textSize="15dp"
            android:textStyle="bold"

            android:layout_toRightOf="@id/guest_waiterid"
            android:layout_margin="5dp"
            android:textColor="@color/marron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp">

        </TextView>
        <TextView
            android:id="@+id/guest_guestnameid"
android:hint="GuestName"
            android:layout_centerHorizontal="true"

            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_margin="5dp"

            android:layout_toRightOf="@id/guest_tablenoid"
            android:textColor="@color/antiquewhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp">

        </TextView>
        <TextView
            android:id="@+id/guest_noguestid"
            android:hint="No of Guest"
            android:layout_centerHorizontal="true"

            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_margin="5dp"

            android:layout_toRightOf="@id/guest_guestnameid"
            android:textColor="@color/antiquewhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp">

        </TextView>

    </TableRow>

</TableLayout>