<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/draw_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- Image holder   -->
    <RelativeLayout
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/previousImageview"
            android:src="@drawable/previous_icon2"
            android:layout_gravity="center_horizontal"
            android:maxHeight="@dimen/abc_text_size_display_3_material"
            android:layout_margin="15dp"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ImageView
            android:id="@+id/logotitle"
            android:src="@drawable/royalplate_welcome"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/signoutBtn"
            android:layout_alignParentRight="true"
            android:textColor="@color/marron"
            android:text="SIGN OUT"
            android:layout_margin="15dp"
            android:textStyle="bold"
            android:background="@drawable/simplebackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <!-- Waiter's Name appear-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/waiternametextviewid"
            android:hint="Waiter Name"
            android:textSize="40dp"
            android:textColor="@color/darkOrange"
            android:textAllCaps="true"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <!-- Waiter's serving tables and  and Refresh Button appears here in center -->
<!-- 3 -->
    <LinearLayout
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 3a -->
        <RelativeLayout
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/h_hostessbtn"
                android:textColor="@color/darkOrange"
                android:text="H"
                android:textStyle="bold"
                android:textSize="20dp"
                android:background="@drawable/simpleborader"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <Button
            android:id="@+id/w_waitersbtn"
            android:layout_below="@+id/h_hostessbtn"
            android:textColor="@color/darkOrange"
            android:text="W"
            android:textStyle="bold"
            android:textSize="20dp"
            android:background="@drawable/simpleborader"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />

            <Button
                android:id="@+id/c_chefbtn"
                android:textColor="@color/darkOrange"

                android:text="C"
                android:textStyle="bold"
                android:textSize="20dp"
                android:background="@drawable/simpleborader"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/w_waitersbtn" />
            <Button
                android:id="@+id/m_managerbtn"
                android:textColor="@color/darkOrange"
                android:text="M"
                android:textStyle="bold"
                android:textSize="20dp"
                android:background="@drawable/simpleborader"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/c_chefbtn" />

        </RelativeLayout>

        <!--<LinearLayout-->
                <!--android:layout_weight="2"-->
                <!--android:orientation="vertical"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent">-->
            <LinearLayout

                android:layout_weight="1"
                android:layout_margin="40dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
             >
                <GridView
                    android:id="@+id/waitertable_gridview"
                    android:columnWidth="10dp"
                    android:numColumns="2"
                    android:verticalSpacing="12dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

                <RelativeLayout
                    android:layout_weight="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/refreshBtn"
                        android:layout_centerInParent="true"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="10dp"
                        android:background="@drawable/rounded_corner"
                        android:src="@drawable/refresh_icon1"
                        android:layout_width="55dp"
                        android:layout_height="55dp"/>

                </RelativeLayout>
        </LinearLayout>



    <!--</LinearLayout>-->




</LinearLayout>