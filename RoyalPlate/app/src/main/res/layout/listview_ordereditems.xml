<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="horizontal"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <!-- shows item name and price -->
    <!-- Item ID -->

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/noofitemsId"
            android:hint="no"
            android:layout_margin="20dp"
            android:layout_alignParentLeft="true"
            android:textColor="@color/darkOrange"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <!-- Item Name -->
        <TextView
            android:id="@+id/itemName"
            android:hint="item name"
            android:layout_margin="20dp"
            android:layout_toRightOf="@id/noofitemsId"
            android:textColor="@color/antiquewhite"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

        </TextView>
        <!-- Item Price -->



        <TextView
            android:id="@+id/itemPrice"
            android:layout_toRightOf="@+id/itemName"
            android:hint="item price"
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp" >

        </TextView>



        <Button
            android:id="@+id/cacleBtn"
            android:background="@drawable/add_delete"
            android:text="@string/plus_sign"
            android:textSize="30dp"
            android:textColor="@color/brown"
            android:layout_gravity="center"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>
</LinearLayout>

