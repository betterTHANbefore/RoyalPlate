<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/simpleborader"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <!-- shows item name and price -->
    <!-- Item ID -->


    <RelativeLayout
        android:layout_weight="1"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Item Name -->
        <LinearLayout
            android:id="@+id/itemnamelayoutid"
            android:weightSum="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/itemNameid"
                android:hint="ItemName"
                android:textColor="@color/antiquewhite"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

            </TextView>
        </LinearLayout>
        <!-- No of Items -->
        <LinearLayout
            android:id="@+id/noofitemlayoutid"
            android:layout_alignParentRight="true"
android:layout_alignParentEnd="true"
            android:weightSum="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/noOfItemsid"
                android:hint="No"
                android:textColor="@color/antiquewhite"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">

            </TextView>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
