<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/draw_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Title Logo image -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="135dp">

        <ImageView
            android:id="@+id/previousImageviewid"
            android:src="@drawable/previous_icon2"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:layout_width="40dp"
            android:layout_height="40dp" />


        <ImageView
            android:id="@+id/logotitle"
            android:src="@drawable/royalplate_welcome"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <!-- Buttons holder   -->

    <RelativeLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/reservationlogbuttonid"
            android:text="Reservation Logs"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/rounded_corner"
            android:layout_margin="20dp"
            android:textColor="@color/orange"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/guestlogsbuttonid"
            android:layout_toRightOf="@+id/reservationlogbuttonid"
            android:text="Guest Logs"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/rounded_corner"
            android:layout_margin="20dp"
            android:textColor="@color/orange"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:layout_weight="3"
        android:layout_margin="20dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ListView
            android:id="@+id/reservationloglistviewid"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>

    </LinearLayout>
</LinearLayout>